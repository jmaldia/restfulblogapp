<% include partials/header %>

    <div class="ui main text container">
        <% blogs.forEach((blog) => { %>
            <div class="blog-post">
                <h2><%= blog.title %></h2>
                <img src="<%= blog.image %>" alt="" width="500">
                <p><%= blog.created %></p>
                <p>
                    <%= blog.body.substring(0, 100) %><% if (blog.body.length > 100) { %>...<% } %>
                </p>
                <a href="/blogs/<%= blog._id %>" class="ui violet basic button">Go to Post</a>
            </div>
        <% }) %>
    </div>

<% include partials/footer %>