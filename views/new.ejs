<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">New Blog Post</div>
        <form class="ui form" action="/blogs" method="post">
            <div class="field">
                <label for="">Post Title</label>
                <input type="text" name="blog[title]" placeholder="Title">
            </div>
            <div class="field">
                    <label for="">Image URL</label>
                <input type="text" name="blog[image]" placeholder="Image">
            </div>
            <div class="field">
                <label for="">Blog Content</label>
                <textarea name="blog[body]" id="" cols="10" placeholder="Blog post goes here"></textarea>
            </div>
            <div class="field">
                <input type="submit" class="ui violet big basic button">
            </div>
        </form>
    </div>

<% include partials/footer %>